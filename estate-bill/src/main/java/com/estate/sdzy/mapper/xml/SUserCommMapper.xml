<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.estate.sdzy.mapper.SUserCommMapper">
    <select id="listUserComm" resultType="java.util.Map">
        select id,name, case when id in(select comm_id from s_user_comm aa where aa.user_id=#{userId})
        then true else false end flag from r_community where comp_id = #{compId}
    </select>
    <select id="listAllUserComm" resultType="java.util.Map" parameterType="java.lang.Long">
        select id,name from r_community where comp_id = #{compId}
    </select>
    <select id="listCommUser" parameterType="java.lang.Long" resultType="com.estate.sdzy.entity.SUserComm">
        select * from s_user_comm where user_id=#{userId}
    </select>
</mapper>
